<link rel="stylesheet" href="/style.css">

<header>Institute Course Management System</header>

<nav>
  <a href="/">Home</a>
  <a href="/add-course">Add Course</a>
  <a href="/courses">View Courses</a>
</nav>

<h2>Edit Course</h2>

<div class="form-box">
  <form action="/edit-course/<%= course._id %>?_method=PUT" method="POST">
    <label>Course Name:</label>
    <input type="text" name="name" value="<%= course.name %>" required>

    <label>Course Code:</label>
    <input type="text" name="code" value="<%= course.code %>" required>

    <label>Credits:</label>
    <input type="number" name="credits" value="<%= course.credits %>" required>

    <button class="save-btn" type="submit">Update Course</button>
  </form>
</div>
